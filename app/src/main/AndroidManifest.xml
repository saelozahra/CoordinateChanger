<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhangho.com.coordinatechanger" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo" >
        <activity
            android:name=".sample.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".sample.DemoActivity"/>
        <activity android:name=".sample.DemoActivity2"/>
        <activity android:name=".sample.DemoActivity3"
            android:theme="@style/Theme.DesignDemo2"
            android:parentActivityName=".sample.MainActivity">
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".sample.MainActivity" />
        </activity>
        <activity android:name=".sample.DemoActivity4"/>

    </application>
</manifest>
